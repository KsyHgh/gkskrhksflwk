<% include ../shared/header.ejs %>
    <div class="page-content">
        <div class="row">

            <div class="col-md-9 col-sm-9 page-content-col" id="main_mobile_content">
                <h3 class="page-title">
                </h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">

                            <div class="portlet-title">
                                <button type="button" class="btn btn-primary" id="add_btn">
                                    <i class="fa fa-plus"></i><%= __('record.addition') %></button>
                                <button type="button" class="btn btn-danger" id="remove_btn" disabled>
                                    <i class="fa fa-trash"></i><%= __('record.delete') %></button>
                            </div>

                            <div class="portlet-body">
                                <table id="recording_table"> </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade draggable-modal" id="add_modal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title" id="action_title"><%= __('record.addition') %></h4>
                        </div>
                        <div class="modal-body form">
                            <form class="form-horizontal" role="form">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('record.recordingEquipment') %>:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="mobile_id">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('record.recordingTime') %>:</label>
                                        <div class="col-md-9">
                                            <input type="number" class="form-control input-sm" placeholder="<%= __('record.recordingTime') %>" id="duration" min="1" value="1">
                                        </div>
                                    </div>
                                    <div class="form-group" style="text-align: center;">
                                        <label class="control-label" style="color: red;"><%= __('record.recordingTimeAtLeast1Minute') %></label>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn green" id="action_btn"><%= __('record.check') %></button>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"><%= __('record.cancellation') %></button>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                var user_app_id = '<%- user.appId%>'
            </script>
            <script src="/app/lang/recording_<%= locale %>.js" type="text/javascript"></script>
            <script src="/app/js/recording.js" type="text/javascript"></script>
            <div class="col-md-3 col-sm-3 page-content-col">
                <% include calls.ejs %>
            </div>
            <% include ../shared/footer.ejs %>