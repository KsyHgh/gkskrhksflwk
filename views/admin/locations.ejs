<% include ../shared/header.ejs %>
    <div class="page-content">
        <script type="text/javascript" src="https://openapi.map.naver.com/openapi/v3/maps.js?ncpClientId=<%= naver_map_client_id %>"></script>
        <style>
            #map {
                height: 700px;
                width: 100%;
                border: 1px black solid;
            }
        </style>
        <div class="row">

            <div class="col-md-9 col-sm-9 page-content-col" id="main_mobile_content">
                <h3 class="page-title">
                </h3>
                <div class="portlet light bordered">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="portlet-title">
                                <button type="button" class="btn btn-primary" id="add_btn"><i class="fa fa-plus"></i><%= __('location.addition') %></button>
                                <button type="button" class="btn btn-danger" id="remove_btn" disabled><i class="fa fa-trash"></i><%= __('location.delete') %></button>
                            </div>

                            <div class="portlet-body">
                                <table id="location_table"> </table>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div id="map" style="width:100%;height:700px;"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade draggable-modal" id="add_modal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title" id="action_title"><%= __('location.addition') %></h4>
                        </div>
                        <div class="modal-body form">
                            <form class="form-horizontal" role="form">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('location.positioningDevice') %>:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="mobile_id">
                                                        </select>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn green" id="action_btn"><%= __('location.check') %></button>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"><%= __('location.cancellation') %></button>
                        </div>
                    </div>
                </div>
            </div>

            <script src="/app/lang/locations_<%= locale %>.js" type="text/javascript"></script>
            <script src="/app/js/locations.js" type="text/javascript"></script>
            <div class="col-md-3 col-sm-3 page-content-col">
                <% include calls.ejs %>
            </div>
            <% include ../shared/footer.ejs %>