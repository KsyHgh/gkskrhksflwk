<% include ../shared/header.ejs %>
    <div class="page-content">
        <div class="row">

            <div class="col-md-9 col-sm-9 page-content-col" id="main_mobile_content">
                <h3 class="page-title"> </h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">
                            <div class="portlet-title">
                                <button type="button" class="btn btn-primary" id="add_btn"><i class="fa fa-plus"></i>목록 추가</button>
                                <button type="button" class="btn btn-primary" id="upload_ars_btn"><i class="fa fa-upload"></i>ARS 갱신</button>
                            </div>
                            <div class="portlet-body">
                                <h4>ARS</h4>
                                <table id="ars_table"> </table>
                                <br>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal fade draggable-modal" id="add_modal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title" id="action_title">추가</h4>
                        </div>
                        <div class="modal-body form">
                            <form class="form-horizontal" role="form">
                                <div class="form-body">
                                    <input type="hidden" id="id">

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">ARS폰 넘버:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control input-sm" placeholder="ARS폰 넘버" id="ars_number">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">음성파일:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="audio_id">
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">듣 기:</label>
                                        <div class="col-md-9">
                                            <audio controls id="user_audio">
                                                <source src="/ars/15441200.mp3" type="audio/mpeg" id="audio_source">
                                                Your browser does not support the audio element.
                                            </audio>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn green" id="action_btn">확인</button>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal">취소</button>
                        </div>
                    </div>
                </div>
            </div>

            <script src="/app/js/ars.js" type="text/javascript"></script>
            <div class="col-md-3 col-sm-3 page-content-col">
                <% include calls.ejs %>
            </div>

            <% include ../shared/footer.ejs %>