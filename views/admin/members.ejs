<% include ../shared/header.ejs %>
    <div class="page-content">
        <style>
            .device-info {
                width: 20px;
                margin-right: 4px;
                cursor: pointer;
            }
        </style>
        <div class="row">
            <div class="col-md-9 col-sm-9 page-content-col" id="main_mobile_content">
                <h3 class="page-title"> </h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">
                            <div class="portlet-title">
                                <button type="button" class="btn btn-primary" id="add_btn">
                                    <i class="fa fa-plus"></i><%= __('members.add') %></button>
                            </div>
                            <div class="portlet-body">
                                <table id="member_table"> </table>
                            </div>
                            <!-- jstree div -->
                            <div id="id-tree-members">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade draggable-modal" id="add_modal" tabindex="-1" role="basic" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                            <h4 class="modal-title" id="action_title"><%= __('members.add') %></h4>
                        </div>
                        <div class="modal-body form">
                            <form class="form-horizontal" role="form">
                                <div class="form-body">
                                    <input type="hidden" id="id">

                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('members.name') %>:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control input-sm" placeholder="<%= __('members.name') %>" id="username">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('members.id') %>:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control input-sm" placeholder="<%= __('members.id') %>" id="loginid">
                                        </div>
                                    </div>
                                    <!-- <div class="form-group">
                                        <label class="col-md-3 control-label">실제수신전환번호:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control input-sm" placeholder="실제수신전환번호" id="number_real">
                                        </div>
                                    </div> -->
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('members.password') %>:</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control input-sm" placeholder="<%= __('members.password') %>" id="password">
                                        </div>
                                    </div>
                                    <!-- <div class="form-group">
                                        <label class="col-md-3 control-label">권한:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="roles">
                                                <option value='chongpan'>총판</option>
                                                <option value='maezhang'>매장</option>
                                            </select>
                                        </div>
                                    </div> -->
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">APP_ID:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="app_id">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('members.allowedip') %>:</label>
                                        <div class="col-md-9">
                                                <input class="form-control input-sm" type="text" placeholder="<%= __('members.typeallowedip') %>" id="id-input-permittedip">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn green" id="action_btn"><%= __('members.confirm') %></button>
                            <button type="button" class="btn dark btn-outline" data-dismiss="modal"><%= __('members.cancel') %></button>
                        </div>
                    </div>
                </div>
            </div>
            <script src="/assets/global/plugins/jstree/dist/jstree.min.js"></script>
            <script src="/app/lang/members_<%= locale %>.js" type="text/javascript"></script>
            <script src="/app/js/members.js" type="text/javascript"></script>
            <div class="col-md-3 col-sm-3 page-content-col">
                <% include calls.ejs %>
            </div>
            
            <% include ../shared/footer.ejs %>