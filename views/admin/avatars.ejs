<% include ../shared/header.ejs %>
    <div class="page-content">
        <div class="row">

            <div class="col-md-9 col-sm-9 page-content-col" id="main_mobile_content">
                <h3 class="page-title">
                </h3>
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">

                            <div class="portlet-title">
                                <button type="button" class="btn btn-success" id="add_btn"><i class="fa fa-trash"></i><%= __('avatar.add') %></button>
                            </div>
                            <div class="portlet-body">
                                <table id="avatar_table"> </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal fade" id="create_modal" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
                <div class="modal-dialog modal-lg " role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="largemodal1"><%= __('avatar.avatar') %><span id="type"><%= __('avatar.add') %></span></h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">Ã—</span>
                            </button>
                        </div>
                        <div class="modal-body form">

                            <form class="form-horizontal" role="form">
                                <div class="form-body">
                                    <input type="text" id="avatar_id" style="display: none;">

                                    <div class="form-group">
                                        <label class="col-md-3 control-label"><%= __('avatar.role') %>:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="roles">
                                                    <option value='chongpan'><%= __('avatar.chongpan') %></option>
                                                    <option value='maezhang'><%= __('avatar.maezhang') %></option>
                                                </select>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-3 control-label">APP_ID:</label>
                                        <div class="col-md-9">
                                            <select class="form-control" id="app_id">
                                                </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-3 control-label">
                                            <a class="btn btn-outline-primary" id="img_file_btn">
                                                <%= __('avatar.imageselect') %></a>
                                        </div>
                                        <div class="col-md-9">
                                            <input id="avatar_img" type="file" class="form-control" style="display: none;" accept="image/jpeg,image/png">
                                            <img id="preview_img" width="200px" src="">
                                        </div>

                                    </div>
                                </div>
                            </form>

                        </div>
                        <div class="modal-footer">
                            <a id="btn_apply" class="btn btn-primary"><%= __('avatar.finish') %></a>
                            <a data-dismiss="modal" class="btn btn-warning"><%= __('avatar.cancellation') %></a>
                        </div>
                    </div>
                </div>
            </div>
            <script src="/app/js/avatars.js" type="text/javascript"></script>
            <div class="col-md-3 col-sm-3 page-content-col">
                <% include calls.ejs %>
            </div>
            <% include ../shared/footer.ejs %>